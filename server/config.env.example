# SanƒÅtana Dharma LLM - Environment Configuration
# Copy this file to config.env and update with your values

# Server Configuration
HOST=0.0.0.0
PORT=8000
ENVIRONMENT=production

# Model Configuration
MODEL_PATH=models/gpt2-gita-clean
MODEL_DEVICE=cpu

# API Configuration
API_TITLE=Sanatana Dharma LLM API
API_VERSION=1.0.0
API_DESCRIPTION=AI-powered Bhagavad-Gita knowledge system

# CORS Configuration (comma-separated)
ALLOWED_ORIGINS=https://yourdomain.com,https://www.yourdomain.com

# Security
SECRET_KEY=your-secret-key-here-change-in-production
RATE_LIMIT=100  # requests per minute

# Logging
LOG_LEVEL=INFO
LOG_FILE=logs/app.log

# Performance
MAX_WORKERS=4
TIMEOUT=60

